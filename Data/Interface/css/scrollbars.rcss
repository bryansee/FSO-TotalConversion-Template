/*Pilot Stats Scrollbar*/

#pilot_stats_text scrollbarvertical
{
	scrollchange-sound: 9;
	width: 10%;
	position: absolute;
	left: -16%;
	z-index: 5;
}

#pilot_stats_text scrollbarvertical slidertrack
{
