/*Scrollbars*/

/*General Scrollbar*/

scrollbarvertical
{
	margin-top: -1%;
	margin-bottom: -1%;
	margin-right: -2.5%;
	width: 5%;
	scrollchange-sound: 9;
	z-index: 5;
}

scrollbarvertical slidertrack
{
	background-decorator: image;
	background-image: scroll-bar-line.png;
}

scrollbarvertical sliderbar
{
	width: 65%;
	height: 15%;
	background-decorator: image;
	background-image: scroll-button.png;
	margin-left: 20%;
}

scrollbarvertical sliderbar:hover
{
	background-image: scroll-button-h.png;
}

scrollbarvertical sliderbar:active
{
	background-image: scroll-button-o.png;
}

scrollbarvertical sliderarrowdec
{
	width: 100%;
	height: 25%;
	mouseover-sound: 17;
	click-sound: 0;
	icon-decorator: image;
	icon-image: scroll-asc-right.png;
}

scrollbarvertical sliderarrowinc
{
	width: 100%;
	height: 25%;
	mouseover-sound: 17;
	click-sound: 0;
	icon-decorator: image;
	icon-image: scroll-desc-right.png;
}

scrollbarvertical sliderarrowdec:hover
{
	icon-image: scroll-asc-right-h.png;
}

scrollbarvertical sliderarrowinc:hover
{
	icon-image: scroll-desc-right-h.png;
}

scrollbarvertical sliderarrowdec:active
{
	icon-image: scroll-asc-right-o.png;
}

scrollbarvertical sliderarrowinc:active
{
	icon-image: scroll-desc-right-o.png;
}

