<body>
<div class="options_column_40">
    <div id="briefing_voice_container">
        <!-- Filled in by Lua -->
    </div>
    <div class="btn_panel_large">
        <div id="large_panel_text" class="ops_left_header">
            <p>Volume</p>
        </div>
        <div id="volume_sliders_container" class=large_panel_wrapper>
            <!-- Filled in by Lua -->
        </div>
    </div>
    <div class="btn_panel_large mouse_settings">
        <div id="mouse_options_container" class=large_panel_wrapper>
            <!-- Filled in by Lua -->
        </div>
    </div>
</div>
<div class="options_column_20">
</div>
<div class="options_column_40 panel_right">
    <div id="skill_level_container">
        <!-- Filled in by Lua -->
    </div>
    <div class="btn_panel_large panel_right">
        <div id="large_panel_text" class="ops_right_header">
            <p>Brightness</p>
        </div>
        <div id=gamma_panel_wrapper>
            <div id="gamma_controls" class="gamma_setting">
                <div id=arrow_cont>
                    <button id="brightness_increase_btn" class="right_arrow_btn arrow button_1">
                        <div id="right_arrow_img" class="arrow">
                            ▶
                        </div>
                    </button>
                </div>
                <div id=arrow_cont>
                    <button id="brightness_decrease_btn" class="left_arrow_btn arrow button_1">
                        <div id="left_arrow_img" class="arrow">
                            ◀
                        </div>
                    </button>
                </div>
                <div id="gamma_value" class="header_text">
                    <p id="brightness_value_el">1.00</p>
                </div>
            </div>
        </div>
        <div id=gamma_graphic_wrapper>
            <div id=gamma_graphic>
                &nbsp; <!-- no need for image, only generated by CSS -->
            </div>
        </div>
    </div>
    <div class="btn_panel_large panel_right joystick_settings">
        <div id="large_panel_text" class="ops_right_header">
            <p>Joystick</p>
        </div>
        <div id="joystick_values_wrapper" class=large_panel_wrapper>
            <!-- Lua will fill in the options UI elements here -->
        </div>
    </div>
</div>
</body>